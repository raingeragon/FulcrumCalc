<Application x:Class="FulcrumCalc.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FulcrumCalc"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <local:SkinResourceDictionary DarkSource="pack://application:,,,/Themes/Dark/DarkColors.xaml" 
                                              LightSource="pack://application:,,,/Themes/Light/LightColors.xaml" />
                <local:SkinResourceDictionary DarkSource="pack://application:,,,/Themes/Dark/DarkSizes.xaml" 
                                              LightSource="pack://application:,,,/Themes/Light/LightSizes.xaml" />
                <ResourceDictionary Source="ThemeStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
