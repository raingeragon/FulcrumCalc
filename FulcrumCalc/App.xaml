<Application x:Class="FulcrumCalc.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FulcrumCalc"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <local:SkinResourceDictionary DarkSource="DarkColors.xaml" 
                                              LightSource="LightColors.xaml" />
                <local:SkinResourceDictionary DarkSource="DarkSizes.xaml" 
                                              LightSource="LightSizes.xaml" />
                <ResourceDictionary Source="ThemeStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
